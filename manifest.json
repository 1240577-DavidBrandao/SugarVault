{
  "manifest_version": 3,
  "name": "Multi-Profile Cookie Switcher",
  "version": "1.2",
  "description": "Easily switch between multiple cookie profiles.",
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "media/vault-logo.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}