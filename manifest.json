{
    "manifest_version": 3,
    "name": "Multi-Profile Cookie Switcher",
    "version": "1.0",
    "description": "Easily switch between multiple cookie profiles for a website.",
    "permissions": ["cookies", "tabs", "storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  